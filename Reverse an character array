#include<iostream>    // header file
#include<string.h>    // header file for string
using namespace std;




#include<stdio.h>

void reverse(char name[]){
    int count=0;
    
    for(int i=0; name[i]!='\0'; i++){
        count++;
    }

    char temp;
    
    count--;
    for(int i=0; i<count; i++){
        
            temp = name[i];
            name[i] = name[count];
            name[count] = temp;
            count--;
        }
        
    cout<<name;  


}

int main(){
    char name[500];
    name = cin.get();

    reverse(name);
    return 0;
}

