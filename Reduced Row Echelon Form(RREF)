/*C Program to find the Reduced Row Echelon Form RREF of matrix
    We can make it nxn by just changing the MACROS

   Author: Sheharyar Khan Daym
   Date: November 24, 2023
   Location: Punjab University College of Information Technology (PUCIT), Near Old Anarkali, Lahore, Punjab, Pakistan
   Contact: sheharyar.daym@gmail.com

   Find the RREF of 3x3 matrix
*/

#include<stdio.h>

// Macros
#define ROW 3
#define COL 3

// Functions
void printMatrix(float matrix[ROW][COL]){
    for(int i=0; i<ROW; i++){
        for(int j = 0; j<COL; j++){
            printf("%.1f\t", matrix[i][j]);
        }
        puts("");
    }
}

void making_RREF(float matrix[ROW][COL]){
    int row = 0;
    // Column wise pivot search
    for(int col = 0; col < COL; col++){
        int pivotRow = row;

        // Finding pivot row
        while(pivotRow<ROW && matrix[pivotRow][col]==0){ // if all time it runs, means there in no pivot in the column
            pivotRow++;
        }

        // If no pivot in the column, then continue
        if(pivotRow == ROW){        // ROW -->3, it means if pivotRow == 3
            continue;
        }

        // If the pivot is not in the current row, it swaps the rows to bring the pivot to the current row.
        if(pivotRow != row){
            for(int i = 0; i<COL; i++){
                int temp = matrix[pivotRow][i];
                matrix[pivotRow][i] = matrix[row][i];
                matrix[row][i] = temp;
            }
        }

        int pivot = matrix[row][col];

        // making pivot 1
        for(int i=col; i<COL; i++){
            matrix[row][i] /= pivot;
        }

        // making rref
        // making zero up and down of the pivot 1
        for(int i=0; i<ROW; i++){
            if(i != row){
                // i is not equal to the current number of row
                int factor = matrix[i][col];
                // factor is the elemet which becomes 0
                for(int j=col; j<COL; j++){
                    matrix[i][j] -= factor * matrix[row][j];
                }
            }
        }
        
        row++;
    }
}


// Main Function
int main(){
    float matrix[ROW][COL];

    // Input matrix elements
    printf("Enter the matrix 3X3: \n");
    for(int i=0; i<ROW; i++){
        for(int j=0; j<COL; j++){       
            scanf("%f", &matrix[i][j]);
        }
    }

    // Output
    printf("Matrix you entered:\n");
    printMatrix(matrix);

    making_RREF(matrix);

    printf("Matrix in REduced Row Echelon Form:\n");
    printMatrix(matrix);

    return 0;
}
